<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lbh.starter.mapper.Usermapper">
    <resultMap id="BaseResultMap" type="com.lbh.starter.pojo.User">
        <id column="user_id" jdbcType="INTEGER" property="userId"/>
        <id column="username" jdbcType="VARCHAR" property="username"/>
        <id column="password" jdbcType="VARCHAR" property="password"/>
        <id column="gender" jdbcType="TINYINT" property="gender"/>
        <id column="phone" jdbcType="CHAR" property="phone"/>
        <id column="birth" jdbcType="DATE" property="birth"/>
        <id column="avatar" jdbcType="VARCHAR" property="avatar"/>
        <id column="create_time" jdbcType="DATE" property="createTime"/>
    </resultMap>

    <insert id="insertUser" parameterType="com.lbh.starter.pojo.User">
        insert into starter.user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">
                user_id,
            </if>
            <if test="username != null">
                username,
            </if>
            <if test="password != null">
                password,
            </if>
            <if test="gender != null">
                gender,
            </if>
            <if test="phone != null">
                phone,
            </if>
            <if test="birth != null">
                birth,
            </if>
            <if test="avatar != null">
                avatar,
            </if>
            create_time,
        </trim>
        <trim prefix=" values(" suffix=")" suffixOverrides=",">
            <if test="userId != null">
                #{userId},
            </if>
            <if test="username != null">
                #{username},
            </if>
            <if test="password != null">
               #{password},
            </if>
            <if test="gender != null">
                #{gender},
            </if>
            <if test="phone != null">
                #{phone},
            </if>
            <if test="birth != null">
                #{birth},
            </if>
            <if test="avatar != null">
                #{avatar},
            </if>
            now(),
        </trim>
    </insert>


</mapper>